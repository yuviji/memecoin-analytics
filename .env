# Application Settings
APP_NAME="Trojan Trading Analytics"
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/market_data
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=300

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOKEN_EVENTS_TOPIC=token-events
KAFKA_CONSUMER_GROUP=memecoin-analytics-consumers
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_MAX_POLL_INTERVAL_MS=300000

# Helius RPC Configuration
# IMPORTANT: Replace with your actual Helius API key from https://dev.helius.xyz/
HELIUS_API_KEY=8d686aaf-e5f0-4282-89ab-43f1348a6588
HELIUS_RPC_URL=https://mainnet.helius-rpc.com
HELIUS_WEBSOCKET_URL=wss://mainnet.helius-rpc.com
HELIUS_ENHANCED_API_URL=https://api.helius.xyz/v0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PER_MINUTES=1

# Analytics Configuration
VELOCITY_WINDOW_HOURS=24
CONCENTRATION_TOP_HOLDERS=15

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
CORS_ORIGINS='["http://localhost:3000", "http://localhost:8080"]'

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2 